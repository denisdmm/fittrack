/**
 * @fileoverview Firestore Security Rules for FitTrack application.
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model for private data,
 * while allowing public read access to certain collections (e.g., exercises).
 * Data segregation between public and private workout routines is used.
 *
 * Data Structure:
 * - /users/{userId}: Stores user profiles; owner-only access.
 * - /groups/{groupId}: Stores group definitions; unrestricted access (prototype).
 * - /workout_routines_public/{workoutRoutineId}: Stores public workout routines; public read, owner-only write.
 * - /users/{userId}/workout_routines/{workoutRoutineId}: Stores user-specific workout routines; owner-only access.
 * - /exercises/{exerciseId}: Stores exercise information; public read, no write access.
 * - /users/{userId}/workout_logs/{workoutLogId}: Stores user workout logs; owner-only access.
 *
 * Key Security Decisions:
 * - User listing is disallowed.
 * - Group access is unrestricted.
 * - Public workout routines have public read access but require user ownership for modifications.
 * - Exercises have public read access.
 *
 * Denormalization for Authorization:
 *  - The `userId` field is used within the workout_routines to establish owner-only writes and keep the structure simple.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Secures user profiles, ensuring only the owner can read and write their own data.
     * @path /users/{userId}
     * @allow (create) - Authenticated user with matching userId creates their profile.
     * @allow (get, update, delete) - Authenticated user with matching userId accesses their profile.
     * @deny (create) - Authenticated user attempts to create a profile with a mismatched userId.
     * @deny (get, update, delete) - Authenticated user attempts to access another user's profile.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId} {
      function isOwner(userId) {
        return request.auth != null && request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
          return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if isOwner(userId) && request.resource.data.id == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.id == resource.data.id;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Secures group definitions.
     * @path /groups/{groupId}
     * @allow (get, list, create, update, delete) - All access is allowed.
     * @principle All access allowed (prototype).
     */
    match /groups/{groupId} {
      allow get, list: if true;
      allow create, update, delete: if true;
    }

    /**
     * @description Secures public workout routines. Public read, owner-only write.
     * @path /workout_routines_public/{workoutRoutineId}
     * @allow (get, list) - All users can read public workout routines.
     * @allow (create) - Only the authenticated user can create a workout routine if the authorId is valid
     * @allow (update, delete) - Only the owner can update or delete.
     * @deny (create, update, delete) - An unauthenticated user cannot create, update, or delete.
     * @principle Public read, owner-only writes.
     */
    match /workout_routines_public/{workoutRoutineId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(ownerId) {
        return request.auth != null && request.auth.uid == ownerId;
      }

      function isExistingOwner(ownerId) {
        return isOwner(ownerId) && resource != null;
      }

      allow get, list: if true;
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow update: if isExistingOwner(resource.data.userId);
      allow delete: if isExistingOwner(resource.data.userId);
    }

    /**
     * @description Secures user-specific workout routines. Owner-only access.
     * @path /users/{userId}/workout_routines/{workoutRoutineId}
     * @allow (create) - Authenticated user with matching userId can create a workout routine.
     * @allow (get, update, delete) - Authenticated user with matching userId can access their workout routines.
     * @deny (create) - Authenticated user attempts to create a workout routine for a different user.
     * @deny (get, update, delete) - Authenticated user attempts to access another user's workout routines.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId}/workout_routines/{workoutRoutineId} {
      function isOwner(userId) {
        return request.auth != null && request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
          return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Secures exercise information. Public read, no write access.
     * @path /exercises/{exerciseId}
     * @allow (get, list) - All users can read exercise information.
     * @deny (create, update, delete) - No user can create, update, or delete exercises.
     * @principle Public read, no writes.
     */
    match /exercises/{exerciseId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Secures user workout logs. Owner-only access.
     * @path /users/{userId}/workout_logs/{workoutLogId}
     * @allow (create) - Authenticated user with matching userId can create a workout log.
     * @allow (get, update, delete) - Authenticated user with matching userId can access their workout logs.
     * @deny (create) - Authenticated user attempts to create a workout log for a different user.
     * @deny (get, update, delete) - Authenticated user attempts to access another user's workout logs.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId}/workout_logs/{workoutLogId} {
      function isOwner(userId) {
        return request.auth != null && request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
          return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }
  }
}